<section class="retry-load">
    <div class="content">
        <h1>Load failed</h1>
        <p>An error occurred.</p>
        <button @onclick="OnReload">Retry</button>
    </div>
</section>


@code {
    [Parameter] public Exception? Exception { get; set; }
    [Parameter, EditorRequired] public EventCallback OnReload { get; set; }

    protected override void OnInitialized()
    {
        if (!OnReload.HasDelegate) throw new ArgumentException($"You must provide the '{nameof(OnReload)}' parameter.");
    }
}
